    <!--黑名单组件-->
    <bean id="sxrBanListAPI" class="top.yzlin.sharedbanlist.BanListAPI"
          c:operatorQQ="499680328"
          c:privateKey="${banListPrivateKey}"
          c:fromGroup="${SXR.groupID}"/>

    <!--黑名单-->
    <bean class="top.yzlin.sharedbanlist.cqrobotapi.BanListOperation"
          c:cqRobot-ref="cqSXR"
          c:admins-ref="sxrAdminList"
          c:banListAPI-ref="sxrBanListAPI"/>

    <!--黑名单警告-->
    <bean class="top.yzlin.sharedbanlist.cqrobotapi.CheckNewMember"
          c:banListAPI-ref="sxrBanListAPI"
          c:admins-ref="sxrAdminList"
          c:groupID="${SXR.groupID}"
