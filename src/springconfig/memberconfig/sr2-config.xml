<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c" xmlns:p="http://www.springframework.org/schema/p"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean name="cqSR2" class="top.yzlin.cqrobotsdk.HttpAPI" c:port="${SR2.port}"/>

    <bean id="sr2Modian" class="top.yzlin.yyh.SRModian"
          c:cqRobot-ref="cqSR2"
          c:groupID="${SR2.groupID}"
          c:proID="${SR.proID}"/>

    <bean class="top.yzlin.cqrobotsdk.RereadMachine"
          c:cqRobot-ref="cqSR2"
          c:gid="${SR2.groupID}"/>

    <bean id="sr2WeiBo" class="top.yzlin.weibo.WeiBoMonitoring"
          c:cqRobot-ref="cqSR2"
          c:groupID="${SR2.groupID}"
          p:sendImg="true">
        <constructor-arg name="weiBo">
            <bean class="top.yzlin.weibo.WeiBo"
                  c:name="孙芮"
                  c:uid="3669091483"
                  c:verifier="7a3b937f"/>
        </constructor-arg>
    </bean>

    <bean class="top.yzlin.yyh.SRGroupAdd" c:cqRobot-ref="cqSR2" c:groupID="${SR2.groupID}"/>


    <bean id="sr2KD" class="top.yzlin.koudai48.KDRoomMonitoring"
          c:groupID="${SR2.groupID}"
          c:cqRobot-ref="cqSR2"
          p:CQPath="HttpApi">
        <constructor-arg name="kdRoom">
            <bean class="top.yzlin.koudai48.KDRoom"
                  c:memberName="孙芮"
                  c:kdValidation-ref="kdValidation"
                  p:faiPaiOpen="false"
                  p:idolFlipOpen="false"/>
        </constructor-arg>
    </bean>

    <bean class="top.yzlin.cqrobotsdk.keywordfunc.KeyWord"
          c:groupID="${SR2.groupID}"
          c:cqRobot-ref="cqSR2">
        <constructor-arg name="admin">
            <list value-type="java.lang.String">
                <value>499680328</value>
                <value>1187781378</value>
                <value>472910740</value>
            </list>
        </constructor-arg>
    </bean>

</beans>